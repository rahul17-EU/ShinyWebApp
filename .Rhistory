## Red Wine Quality - Shiny App
# Load the shiny package
library(shiny)
library(shinythemes)
#1 Define the UI ---------------------------------------------------------------
ui <- fluidPage(
theme = shinytheme("paper"),  # set theme
tags$head( # set logo position
tags$style(HTML(
".logo-container {
position: absolute;
top: -10px;
right: 10px;
}"
))
),
div(class = "logo-container", # set logo image
img(src = "www/wine_logo.png", width = 100, height = 100)
),
titlePanel("Red Wine Quality - Visualizing Machine Learning") # set title
)
#2 Define the server -----------------------------------------------------------
server <- function(input, output) {
# No computations needed for this simple app
}
#3 Run the app ----------------------------------------------------------------
shinyApp(ui = ui, server = server)
